<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/vSeparator"
        android:layout_width="@dimen/dp_4"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_24"
        android:background="@color/border_train_at_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvExerciseName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:textAllCaps="true"
        android:textAppearance="@style/Bold"
        android:textColor="@color/back_arrow"
        android:textSize="@dimen/sp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vSeparator"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vSeparator2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_12"
        android:alpha="0.5"
        android:background="@color/back_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vSeparator"
        app:layout_constraintTop_toBottomOf="@id/tvExerciseName" />

</androidx.constraintlayout.widget.ConstraintLayout>