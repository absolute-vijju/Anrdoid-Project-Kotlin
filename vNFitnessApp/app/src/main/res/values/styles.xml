<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/step_heading</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/step_heading</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Bold">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="SemiBold">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="ExtraBold">
        <item name="fontFamily">@font/montserrat_extrabold</item>
    </style>

    <style name="Italic">
        <item name="fontFamily">@font/montserrat_italic</item>
    </style>

    <style name="Medium">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Regular">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Serendipity">
        <item name="fontFamily">@font/serendipity</item>
    </style>

</resources>
